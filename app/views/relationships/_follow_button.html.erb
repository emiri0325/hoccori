<% unless current_user == user %>
  <% if current_user.following?(user) %>
    <%= form_with(model: current_user.relationships.find_by(follow_id: user.id), local: true, method: :delete) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>

      <span title="フォローをはずす"><%= button_tag :type => "submit", class: 'btn btn-primary btn-block' do  %>
        <i class="fas fa-user-minus"></i> ユーザのフォローをはずす
      <% end %></span>
    
    <% end %>
  <% else %>
    <%= form_with(model: current_user.relationships.build, local: true) do |f| %>
      <%= hidden_field_tag :follow_id, user.id %>
      <span title="フォローする"><%= button_tag :type => "submit", class: 'btn btn-outline-primary btn-block' do  %>
        <i class="fas fa-user-plus"></i> ユーザをフォローする
      <% end %></span>
    <% end %>
  <% end %>
<% end %>