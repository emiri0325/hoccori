<div class="text-center">
  <h1>ログイン</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">

    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>

      <div class="form-group">
        <%= f.label :email, 'メールアドレス' %> <span class="badge badge-danger">必須</span>
        <%= f.email_field :email, class: 'form-control', placeholder: '例：hoccori@example.com' %>
        <span style="font-size:5px;">※ 登録したメールアドレスを入力してください</span>
      </div>

      <div class="form-group">
        <%= f.label :password, 'パスワード' %> <span class="badge badge-danger">必須</span>
        <%= f.password_field :password, class: 'form-control', placeholder: '例：Hoccori123' %>
        <span style="font-size:5px;">※ ユーザ登録時に設定したパスワードを入力してください</span>
      </div>
      <div class="text-right">
      <%= f.submit 'ログイン', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</div>