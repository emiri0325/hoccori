<% if logged_in? %>
  <div class="row">
    <aside class="col-sm-4">
      <%= form_with(model: @post, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
        <div class="form-group">
          <%= f.text_area :content, class: 'form-control', placeholder: '今日はどんな "ほっこり" を見つけましたか？', rows: 5 %>
          <span style="font-size:5px;">※ 255文字以内で入力してください</span>
        </div>
        
        <%= f.label :画像 %>
        <%= f.file_field :img, id: :post_img %>        
        
        <div class="text-right">
        <%= f.submit '投稿', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </aside>
    <div class="col-sm-8">
      <%= render 'posts/posts', posts: @posts %>
    </div>
  </div>
<% else %>
<div class="center jumbotron" style="background: url(<%= asset_path "toppage.jpg" %>); background-size:cover;">
  <div class="text-center">
    <h1>hoCcori</h1>
    <p>日常のちょっとした幸せをみんなにおすそ分けする場所です。
    <br>心が”ほっこり（hoccori）”するようなエピソードや写真を
    <br>たくさんたくさん、お待ちしています。</p>
  </div>
</div> 
<div class="text-center">
<%= link_to 'ログイン', login_path, class: 'btn btn-outline-primary w-50' %>
<%= link_to 'ユーザ登録', signup_path, class: 'btn btn-outline-primary w-50 mt-3' %>
</div>
<% end %>