<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
      <div class="text-center">
          <h3><%= @user.name %></h3> 
      </div>
      <%= render 'relationships/follow_button', user: @user %>
      
      <%= render 'posts/create_post_button', user: @user %>
      </aside>
  <div class="col-sm-8">
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= user_path(@user) %>" class="nav-link"><i class="far fa-file-alt fa-3x" style="color: #696969;"></i>
        <p><span style="font-size:5px;">投稿<span class="badge badge-secondary"><%= @count_posts %></span></span></p></a></li>
      <li class="nav-item"><a href="<%= followings_user_path(@user) %>" class="nav-link"><i class="fas fa-user-check fa-3x" style="color: #696969;"></i>
        <p><span style="font-size:5px;">フォロー<span class="badge badge-secondary"><%= @count_followings %></span></span></p></a></li>
      <li class="nav-item"><a href="<%= followers_user_path(@user) %>" class="nav-link"><i class="fas fa-user-friends fa-3x" style="color: #696969;"></i>
        <p><span style="font-size:5px;">フォロワー<span class="badge badge-secondary"><%= @count_followers %></span></span></p></a></li>
      <li class="nav-item"><a href="<%= likes_user_path(@user) %>" class="nav-link <%= 'active' if current_page?(likes_user_path(@user)) %>"><i class="fas fa-heart fa-3x" style="color: #696969;"></i>
        <p><span style="font-size:5px;">いいね<span class="badge badge-secondary"><%= @count_likes %></span></p></a></li>
    </ul>
    <%= render 'posts/posts', posts: @likes %>
  </div>
</div>